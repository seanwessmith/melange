{
  "manifest_version": 3,
  "name": "Melange Ext",
  "version": "1.0.0",
  "description": "Instant Wikipedia-style dictionary popups for any word you highlight",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "permissions": [
    "cookies",
    "notifications",
    "alarms",
    "storage",
    "webNavigation",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.chess.com/*"],
      "js": ["content/chess_com.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content/dictionary.js"],
      "css": ["styles/dictionary.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
